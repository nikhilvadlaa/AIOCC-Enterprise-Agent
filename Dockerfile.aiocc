FROM python:3.11-slim
WORKDIR /app
# system deps for reportlab and other libs
RUN apt-get update && apt-get install -y build-essential libjpeg-dev zlib1g-dev && rm -rf /var/lib/apt/lists/*
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
# Copy project
COPY . .
ENV PYTHONUNBUFFERED=1
# Expose nothing; runner runs internal
CMD ["python", "run_long_running.py"]
