# Google Cloud Project
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/key.json # Optional if using gcloud auth

# Vertex AI (Gemini)
# Ensure Vertex AI API is enabled in your project

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# SendGrid Integration
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Trello Integration
TRELLO_API_KEY=your-trello-api-key
TRELLO_TOKEN=your-trello-token
TRELLO_BOARD_ID=your-board-id
TRELLO_LIST_ID=your-list-id

# OpenAPI Tools (Optional, if running the separate tools server)
OPENAPI_BASE_URL=http://localhost:8080

# Demo Mode (Set to true to bypass Vertex AI billing requirement)
DEMO_MODE=false
